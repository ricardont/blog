<div class="container log_sign_in_container" id="signin_form" style="style=position:relative !important;" >
	<div class="col-xs-12 column">
		<div class="col-sm-3 col-sm-offset-4 column">

      <div class="row center-sm" style="text-align:center;"><h2>Registro</h2></div>   
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true,  placeholder:"correo", class:"form-control"  %>
      </div>

      <div class="form-group">
        <% pss_len = "" %>
        <% if @minimum_password_length %>
        <% pss_len =  "(" + @minimum_password_length.to_s + " caract. min)"  %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" ,  placeholder:   "contraseña "  +  pss_len, class:"form-control"   %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirmar contraseña" , class:"form-control"   %>
      </div>

      <div class="actions">
        <%= f.submit "Registrarme", class: "btn btn-block btn-default " %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div> 
</div>   

